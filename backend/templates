    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Twitter analysis
            document.getElementById('analyze-twitter').addEventListener('click', function() {
                const twitterResults = document.getElementById('twitter-results');
                twitterResults.innerHTML = '<div class="loading"><div class="spinner"></div></div>';
                
                fetch('/analyze/twitter')
                    .then(response => response.json())
                    .then(data => {
                        updateResults('twitter-results', data);
                        updateStats(data);
                    })
                    .catch(error => {
                        twitterResults.innerHTML = '<p class="error">Error loading Twitter data</p>';
                        console.error('Error:', error);
                    });
            });
            
            // Instagram analysis
            document.getElementById('analyze-instagram').addEventListener('click', function() {
                const instagramResults = document.getElementById('instagram-results');
                instagramResults.innerHTML = '<div class="loading"><div class="spinner"></div></div>';
                
                fetch('/analyze/instagram')
                    .then(response => response.json())
                    .then(data => {
                        updateResults('instagram-results', data);
                        updateStats(data);
                    })
                    .catch(error => {
                        instagramResults.innerHTML = '<p class="error">Error loading Instagram data</p>';
                        console.error('Error:', error);
                    });
            });
            
            // Auto-load Twitter data on page load
            document.getElementById('analyze-twitter').click();
            
            function updateResults(elementId, data) {
                const element = document.getElementById(elementId);
                
                if (data.length === 0) {
                    element.innerHTML = '<p>No data available</p>';
                    return;
                }
                
                let html = '';
                data.forEach(item => {
                    html += `
                        <div class="sentiment-item ${item.sentiment.toLowerCase()}">
                            <p class="sentiment-text">${item.text}</p>
                            <span class="sentiment-label">${item.sentiment}</span>
                        </div>
                    `;
                });
                
                element.innerHTML = html;
            }
            
            function updateStats(data) {
                // Update total posts
                const currentTotal = parseInt(document.getElementById('total-posts').textContent);
                document.getElementById('total-posts').textContent = currentTotal + data.length;
                
                // Update sentiment counts
                data.forEach(item => {
                    const elementId = `${item.sentiment.toLowerCase()}-posts`;
                    const currentCount = parseInt(document.getElementById(elementId).textContent);
                    document.getElementById(elementId).textContent = currentCount + 1;
                });
            }
        });
    </script>
